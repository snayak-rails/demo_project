<div class="container-fluid">
  <h3>Edit product details</h3>
  <br>

  <div id="flash">
    <%= render partial: 'shared/flash',
      locals: {message: flash[:notice]} unless flash[:notice].blank? %>
  </div>

  <%= form_for(@product, html: { multipart: true }, remote: true) do |f| %>

    <div class="form-group row">
      <%= f.label :title, "Title:", class: "col-sm-2 col-form-label" %>
      <div class="col-sm-10">
        <%= f.text_field :title, class: "form-control" %>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :category, "Category:", class: "col-sm-2 col-form-label" %>
      <div class="col-sm-10">
        <%= f.select :category, options_for_select(%i[book stationary garments accesories electronics]) %>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :description, "Description:", class: "col-sm-2 col-form-label" %>
      <div class="col-sm-10">
        <%= f.text_field :description, class: "form-control" %>
      </div>
    </div>
    <div class="form-group row">
        <%= f.label :price, "Price:", class: "col-sm-2 col-form-label" %>
        <div class="col-sm-10">
          <%= f.number_field :price, step: :any, class: "form-control" %>
        </div>
    </div>
    <div class="form-group row">
      <%= f.label :stock, "Stock:", class: "col-sm-2 col-form-label" %>
      <div class="col-sm-10">
        <%= f.number_field :stock, class: "form-control" %>
      </div>
    </div>

    <%= fields_for :product_images do |p| %>
      <div class="field">
        <%= p.label :image, "Add images: " %><br>
        <%= p.file_field :image, multiple: true,
            name: "product_images[image][]" %>
      </div>
    <% end %>
    <span style="color:black"> You can select multiple images. </span><br><br>

    <div class="container-fluid">
      <h5>Select product images to remove: </h5><br>
      <% @product_images.each do |product_image| %>
        <div class="container">
        <figure class="figure">
          <%= image_tag (product_image.image).url, class: "figure-img img-fluid rounded",
          alt: "Image not available" %>
        </figure>
        <%= check_box_tag('image_ids[]' ,product_image.id) %>
      </div>
      <% end %><br>
    </div>

    <%= f.submit 'Save changes', class: "btn btn-success" %><br>

  <% end %><br><br>
</div>
