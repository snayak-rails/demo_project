<% @product_images.each do |product_image| %>
  <%= image_tag((product_image.image).url) %>
<% end %>
<br><br>

<table>
  <tbody>
    <%= "Title: " + @product.title %><br>
    <%= "Category: " + @product.category %><br>
    <%= "Description: " + @product.description %><br>
    <%= "Price: " + @product.price.to_s %><br>
  </tbody>
</table>

<% if current_user.present? %>
  <%= button_to "Add to Cart",
    add_to_cart_cart_checkout_index_path(product_id: @product.id),
    :id => "add-to-cart-button", :method => :post%>

  <%= button_to "Cart", cart_checkout_index_path,
    :id => "cart-button", :method => :get%>
<% end %>

<% unless flash[:notice].blank? %>
  <%= flash[:notice].html_safe %>
<% end %>
