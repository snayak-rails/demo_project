<div class="container-fluid">

  <br>
  <div id='flash_error'>
    <%= render partial: 'shared/flash_error',
    locals: {message: flash[:error]} unless flash[:error].blank? %>
  </div>
  <div id='flash'>
    <%= render partial: 'shared/flash',
    locals: {message: flash[:notice]} unless flash[:notice].blank? %>
  </div>

  <%= render partial: 'modal_login' %><br>

  <div id="products" >
    <%= render partial: 'products', locals: { item_collection: @products } %>
  </div>

</div>

<script>
  $(function(){
     $('.pagination a').attr('data-remote', 'true')
  });
</script>
