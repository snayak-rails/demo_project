<%= button_to "Add product", new_product_path,
    :id => "add-product-button", :method => :get %>

<br>
<% unless flash[:notice].blank? %>
  <%= flash[:notice].html_safe %>
<% end %>

<table style="border: 1px solid black">
  <thead>
    <tr>
      <th>User_id: </th>
      <th>Title: </th>
      <th>Category: </th>
      <th>Description: </th>
      <th>Price: </th>
    </tr>
  </thead>
  <tbody>
    <% @seller_products.each do |product| %>
      <tr>
        <td><%= product.user_id %></td>
        <td><%= product.title %></td>
        <td><%= product.category %></td>
        <td><%= product.description %></td>
        <td><%= product.price %></td>

        <td><%= button_to "show", product_path(product.id),
               :id => "show-product-button", :method => :get %><td>

        <td><%= button_to "delete", product_path(product.id),
               :id => "delete-product-button", :method => :delete,
                data: { confirm: 'Are you sure?' } %><td>

        <td><%= button_to "edit", edit_product_path(product.id),
               :id => "edit-product-button", :method => :get %><td>
      </tr>
      <br>
    <% end %>
  </tbody>
</table>
