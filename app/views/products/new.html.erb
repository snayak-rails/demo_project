<h1>Add a product</h1>
<br>

<%= form_for :product, url: products_path do |f| %>

  Title: <%= f.text_field :title %>
  <br>
  Category: <%= f.text_field :category %>
  <br>
  Description: <%= f.text_field :description %>
  <br>
  Price: <%= f.number_field :price, step: :any %>
  <br>
  <%= f.submit "Add Product" %>

<% end %>