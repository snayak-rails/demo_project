<%= form_for(@user) do |f| %>

  Name: <%= f.text_field :name %>
  <br>
  Gender: <%= f.select :gender, options_for_select(["male", "female", "other"]) %>
  <br>
  Email: <%= f.text_field :email %>
  <br>
  Contact: <%= f.number_field :contact %>
  <br>
  Role: <%= f.select :role, options_for_select(["seller", "buyer"]) %>
  <br>
  Password: <%= f.password_field :password %>
  <br>
  <%= f.submit yield(:button_text), class: "btn btn-primary" %>

<% end %>
