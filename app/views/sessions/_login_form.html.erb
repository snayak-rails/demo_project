<div class="container-fluid">

  <%= form_tag login_path, :remote => true, class: "form-horizontal center" do %>
    <div class="form-group row">
      <%= label_tag :email, "Email Address:", class: "col-sm-2 col-form-label" %>
      <div class="col-sm-10">
        <%= text_field_tag :email, nil, class: "form-control",
          'aria-describedby': "emailHelp", placeholder: "Enter email" %>
      </div>
    </div>
    <div class="form-group row">
      <%= label_tag :password, "Password:", class: "col-sm-2 col-form-label" %>
      <div class="col-sm-10">
        <%= password_field_tag :password, nil, class: "form-control",
        placeholder: "Enter password" %>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-sm-10">
        <%= submit_tag "Login", class: "btn btn-success" %>
      </div>
    </div>
  <% end %><br>

  <%= link_to "New to Shopping Cart? Sign up", new_user_path,
      :id => "signup-link", :method => :get %>
</div>
