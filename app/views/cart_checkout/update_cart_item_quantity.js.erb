<% if @cart_item.errors.blank? %>
  $("#" + "<%= @cart_item.id %>")
    .html("Quantity: <%= j (@cart_item.quantity.to_s) %>");
  $("#" + "<%= @cart_item.id %>-price")
    .html("Price: <%= j (number_to_currency(@cart_item.quantity + @product.price, unit: '$')) %>");
  $('#total-amount')
    .html("Total Amount: <%= j (number_to_currency(@cart.total_amount, unit: '$')) %>");
<% else %>
  $('#flash')
      .html("<%= j(render partial: 'shared/flash') %>")
<% end %>
