<%= form_for @cart, url: cart_checkout_path(@cart.id), method: :put, remote: true do |f| %>

  Name: <%= f.text_field :name %>
  <br>
  Contact: <%= f.number_field :contact %>
  <br>
  Email: <%= f.text_field :email %>
  <br>
  Address1: <%= f.text_field :address1 %>
  <br>
  City: <%= f.text_field :city %>
  <br>
  State: <%= f.text_field :state %>
  <br>
  Country: <%= f.text_field :country %>
  <br>
  Pincode: <%= f.number_field :pincode %>
  <br>

  <%= f.submit 'Confirm order' %>

<% end %>
